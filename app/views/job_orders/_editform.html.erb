<%= form_with url: joborders_path, method: "put" do |form| %>
<table>
    <thread>
        <tr>
        <th>Job Order Number</th>
            <th>Service</th>
            <th>Department</th>
            <th>Description</th>
            <th>Created At</th>
            <th>Classification</th>
            <th>Engineering Unit</th>
            <th>Status</th>
            <th>Remarks</th>
            <th>Remarks As Of</th>
        </tr>
    </thread>
    <tbody>
            <tr>
                <td><div class ="field">
                <%= form.text_field :job_order_number, value: @jo.job_order_number, readonly: true %>
                </div></td>
                <td><%= @jo.service%></td>
                <td><%= @jo.department%></td>
                <td><%= @jo.description%></td>
                <td><%= @jo.created_at%></td>
                <td><div class ="field">
                <%= form.text_field :classification, value: @jo.classification %>
                </div></td>
                <td><div class ="field">
                <%= form.text_field :engineering_unit, value: @jo.engineering_unit %>
                </div></td>
                <td><div class ="field">
                <%= form.text_field :status, value: @jo.status %>
                </div></td>
                <td><div class ="field">
                <%= form.text_field :remarks, value: @jo.remarks %>
                </div></td>
                <td><div class ="field">
                <%= form.text_field :remarks_as_of, value: Date.today, readonly: true%>
                </div></td>
            </tr>
    </tbody>
</table>

    <div class="actions">
    <%= form.submit %>
    </div>
<% end %>
